{
    "name": "gandhi-jay/toppack",
    "description": "An app to find top Github packs.",
    "keywords": ["microframework", "rest", "router", "psr7"],
    "homepage": "http://github.com/gandhi-jay/toppack",
    "license": "MIT",
    "authors": [
        {
            "name": "Jay Gandhi",
            "email": "i@gandhijay.com",
            "homepage": "http://www.gandhijay.com/"
        }
    ],
    "require": {
        "php": ">=7.0.32",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "vlucas/phpdotenv": "^2.5",
        "league/fractal": "^0.17.0",
        "guzzlehttp/guzzle": "^6.3",
        "illuminate/database": "^5.7"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload": {
        "psr-4": {
            "Github\\": "src/Github"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "composer dump-autoload -o && php -S localhost:8080 -t public",
        "test": "phpunit"
    }

}
